<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your Contractor"
            android:textSize="24sp"
            android:textColor="#4A148C" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Based on Review"
            android:textSize="20sp"
            android:textColor="#4A148C"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search for your favourite type"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/kind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kind:"
            android:textSize="18sp"
            android:textColor="#4A148C"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/kind_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:scrollbars="horizontal">

            <!-- Add ImageButtons or ImageViews here for Kind -->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_11"
                android:contentDescription="Kind 1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_12"
                android:contentDescription="Kind 2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_13"
                android:contentDescription="Kind 3" />
        </LinearLayout>

        <TextView
            android:id="@+id/perfect_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfect:"
            android:textSize="18sp"
            android:textColor="#4A148C"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/perfect_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:scrollbars="horizontal">

            <!-- Add ImageButtons or ImageViews here for Perfect -->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_14"
                android:contentDescription="Perfect 1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_14"
                android:contentDescription="Perfect 2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_16"
                android:contentDescription="Perfect 3" />
        </LinearLayout>

        <!-- Add more sections as needed -->

    </LinearLayout>
</ScrollView>
